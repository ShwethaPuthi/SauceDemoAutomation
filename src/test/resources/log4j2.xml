<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] %-5p %c - %m%n"/>
        </Console>

        <!-- Extent Appender -->
        <Appender type="utils.ExtentAppender" name="ExtentAppender"/>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ExtentAppender"/>
        </Root>
    </Loggers>
</Configuration>