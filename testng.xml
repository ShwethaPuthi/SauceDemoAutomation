<suite name="AutomationSuite" parallel="false" verbose="1">
    <parameter name="browser" value="safari" />
    <parameter name="url" value="https://www.saucedemo.com/" />
    <parameter name="groups" value="${groups}" />
    <test name="DynamicGroupExecution">
        <groups>
            <run>
                <include name="${groups}"/>
            </run>
        </groups>
        <classes>
            <class name="tests.InventoryTest"/>
            <class name="tests.LoginTest"/>
            <class name="tests.CartTest"/>
        </classes>
    </test>
</suite>