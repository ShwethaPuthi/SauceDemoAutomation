<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelGroupSuite" parallel="tests" thread-count="3" verbose="1">

    <test name="Chrome-Functional">
        <parameter name="browser" value="chrome"/>
        <parameter name="url" value="https://www.saucedemo.com/"/>
        <groups>
            <run>
                <include name="Functional"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.CheckoutTest"/>
            <class name="tests.CheckoutCompleteTest"/>
            <class name="tests.CartTest"/>
        </classes>
    </test>

    <test name="Edge-Smoke">
        <parameter name="browser" value="edge"/>
        <parameter name="url" value="https://www.saucedemo.com/"/>
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.CartTest"/>
            <class name="tests.InventoryTest"/>
        </classes>
    </test>

    <test name="Safari-Sanity">
        <parameter name="browser" value="safari"/>
        <parameter name="url" value="https://www.saucedemo.com/"/>
        <groups>
            <run>
                <include name="Sanity"/>
            </run>
        </groups>
        <classes>
            <class name="tests.CartTest"/>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

</suite>